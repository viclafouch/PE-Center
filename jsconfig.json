{
  "compilerOptions": {
    "target": "esnext",
    "allowSyntheticDefaultImports": false,
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/js/components/*"],
      "@styled/*": ["src/js/styled/*"],
      "@stores/*": ["src/js/stores/*"],
      "@containers/*": ["src/js/containers/*"],
      "@shared/*": ["src/js/shared/*"],
      "@utils/*": ["src/js/utils/*"],
      "@scss/*": ["src/scss/*"],
      "@img/*": ["src/img/*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
